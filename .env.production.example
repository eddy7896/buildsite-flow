# Production Environment Variables
# Copy this file to .env.production and update with your values

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=buildflow_db
POSTGRES_PORT=5432
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_DATA_PATH=./data/postgres

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# ============================================================================
# Application URLs
# ============================================================================
VITE_API_URL=https://api.yourdomain.com/api
FRONTEND_PORT=8080
BACKEND_PORT=3000

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate a strong secret: openssl rand -base64 32
VITE_JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET
JWT_EXPIRY=24h
SESSION_SECRET=${VITE_JWT_SECRET}

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your production domains (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ============================================================================
# Multi-Tenant Database Configuration
# ============================================================================
# Prefix for agency databases (e.g., agency_company_12345678)
AGENCY_DB_PREFIX=agency_
# Maximum number of agency databases
MAX_AGENCY_DATABASES=1000
# Connection pool size per agency database
AGENCY_DB_POOL_SIZE=10

# ============================================================================
# File Storage
# ============================================================================
STORAGE_PATH=./data/storage
MAX_FILE_SIZE=10485760

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
# Cron schedule: minute hour day month weekday
# Example: 0 2 * * * = Daily at 2 AM
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_NAME=BuildFlow Agency Management
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# ============================================================================
# Feature Flags
# ============================================================================
VITE_ENABLE_AI_FEATURES=false
VITE_ANALYTICS_ID=
