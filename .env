# Core PostgreSQL Database Configuration
# According to mainrules: Database=buildflow_db, User=postgres, Password=admin
DATABASE_URL=postgresql://postgres:admin@localhost:5432/buildflow_db
VITE_DATABASE_URL=postgresql://postgres:admin@localhost:5432/buildflow_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration (frontend will call the Node server here)
# For local dev: http://localhost:3000/api
# For production: http://72.61.243.152:3000/api (or use your domain)
VITE_API_URL=http://localhost:3000/api

# CORS Configuration - Allow dev and prod origins
# For production, add your domain/IP: http://yourdomain.com,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://localhost:8080,http://localhost:80,http://72.61.243.152,http://72.61.243.152:80,http://72.61.243.152:3000,http://dezignbuild.site,http://www.dezignbuild.site,https://dezignbuild.site,https://www.dezignbuild.site
# Authentication / Security
# NOTE: change this before production
VITE_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Storage
VITE_FILE_STORAGE_PATH=/var/lib/buildflow/storage

# Application Metadata
VITE_APP_NAME=BuildFlow Agency Management
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PROJECT_MANAGEMENT=true
VITE_ENABLE_FINANCIAL_MANAGEMENT=true
VITE_ENABLE_HR_MANAGEMENT=true
VITE_ENABLE_CRM=true

