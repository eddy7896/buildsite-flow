# ============================================================================
# BuildFlow Production Environment Configuration for Hostinger KVM Server
# ============================================================================
# Copy this file to .env.hostinger and update with your actual values
# DO NOT commit .env.hostinger to version control!

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS
POSTGRES_DB=buildflow_db
POSTGRES_PORT=5432
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=128MB

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_MIN_16_CHARS
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb

# ============================================================================
# Application URLs
# ============================================================================
# Replace with your actual domain/IP
# If using domain: https://yourdomain.com/api
# If using IP: http://YOUR_SERVER_IP:3000/api
VITE_API_URL=http://YOUR_SERVER_IP:3000/api
FRONTEND_PORT=80
BACKEND_PORT=3000

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate a strong secret: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
VITE_JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_32_CHARS_MIN
JWT_EXPIRY=24h
SESSION_SECRET=${VITE_JWT_SECRET}

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your production domains/IPs (comma-separated, no spaces)
# Examples:
#   CORS_ORIGINS=http://YOUR_SERVER_IP,http://yourdomain.com,https://yourdomain.com
#   CORS_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://YOUR_SERVER_IP,http://localhost:80

# ============================================================================
# Multi-Tenant Database Configuration
# ============================================================================
AGENCY_DB_PREFIX=agency_
MAX_AGENCY_DATABASES=1000
AGENCY_DB_POOL_SIZE=10

# ============================================================================
# File Storage
# ============================================================================
STORAGE_PATH=./data/storage
MAX_FILE_SIZE=10485760

# ============================================================================
# Email Configuration
# ============================================================================
# Choose one: smtp, sendgrid, mailgun, aws_ses, resend, postmark, mailtrap
EMAIL_PROVIDER=smtp

# SMTP Configuration (Gmail, Outlook, custom SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=true

# SendGrid (if using SendGrid)
# SENDGRID_API_KEY=SG.your_api_key_here
# SENDGRID_FROM=noreply@yourdomain.com

# Mailgun (if using Mailgun)
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES (if using AWS SES)
# AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Resend (if using Resend)
# RESEND_API_KEY=re_your_api_key
# RESEND_FROM=onboarding@resend.dev

# Postmark (if using Postmark)
# POSTMARK_API_TOKEN=your_postmark_token
# POSTMARK_FROM=noreply@yourdomain.com

# Mailtrap (if using Mailtrap for testing)
# MAILTRAP_API_TOKEN=your_mailtrap_token
# MAILTRAP_FROM=your-email@yourdomain.com
# MAILTRAP_USE_SANDBOX=false
# MAILTRAP_INBOX_ID=
# MAILTRAP_BULK=false

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
# Cron schedule: minute hour day month weekday
# Example: 0 2 * * * = Daily at 2 AM UTC
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_NAME=BuildFlow Agency Management
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# ============================================================================
# Feature Flags
# ============================================================================
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PROJECT_MANAGEMENT=true
VITE_ENABLE_FINANCIAL_MANAGEMENT=true
VITE_ENABLE_HR_MANAGEMENT=true
VITE_ENABLE_CRM=true
VITE_ANALYTICS_ID=

# ============================================================================
# Third-party Services (Optional)
# ============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_GOOGLE_MAPS_API_KEY=
VITE_ANALYTICS_TRACKING_ID=

