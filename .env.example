# ============================================================================
# Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
POSTGRES_PASSWORD=admin
# ⚠️ CHANGE THIS to a secure password!
# Generate with: openssl rand -base64 32

POSTGRES_PORT=5432
DATABASE_PORT=5432

# ============================================================================
# Security & Authentication (REQUIRED)
# ============================================================================
VITE_JWT_SECRET=your-secret-key-change-this
# ⚠️ CHANGE THIS to a secure secret (minimum 32 characters)!
# Generate with: openssl rand -base64 32
# Example: f8KQxR2ZpL9M4wYcE7HVaTnJ5D6sAUB

# ============================================================================
# API Configuration
# ============================================================================
# Development
# VITE_API_URL=http://localhost:3000/api

# Production (replace with your domain)
VITE_API_URL=http://your-domain.com:3000/api
# After SSL: https://your-domain.com/api

# ============================================================================
# Frontend Configuration
# ============================================================================
# Development
# FRONTEND_URL=http://localhost:5173

# Production (replace with your domain)
FRONTEND_URL=http://your-domain.com
# After SSL: https://your-domain.com

# ============================================================================
# CORS Configuration
# ============================================================================
# Development
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Production (add your domains)
CORS_ORIGINS=http://your-domain.com,https://your-domain.com,http://www.your-domain.com,https://www.your-domain.com

# ============================================================================
# Port Configuration
# ============================================================================
PORT=3000
BACKEND_PORT=3000
FRONTEND_PORT=80
REDIS_PORT=6379

# ============================================================================
# Application Metadata
# ============================================================================
VITE_APP_NAME=Drena - Agency Management Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ============================================================================
# File Storage
# ============================================================================
VITE_FILE_STORAGE_PATH=/app/storage
FILE_STORAGE_PATH=/app/storage

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PROJECT_MANAGEMENT=true
VITE_ENABLE_FINANCIAL_MANAGEMENT=true
VITE_ENABLE_HR_MANAGEMENT=true
VITE_ENABLE_CRM=true

# ============================================================================
# Third-party Services (Optional)
# ============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_GOOGLE_MAPS_API_KEY=
VITE_ANALYTICS_TRACKING_ID=
