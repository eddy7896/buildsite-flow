# PostgreSQL Database Configuration
VITE_DATABASE_URL=postgresql://app_user:strong_password_here@localhost:5432/buildflow_db

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
# Local development:
#   Backend (Express): http://localhost:3000
#   Frontend (Vite):  http://localhost:8080
#   Access from your machine: http://localhost:8080
#   Access from LAN devices:  http://<YOUR_LAN_IP>:8080
#
# The shared frontend API helper will:
#   - Use VITE_API_URL as-is when running on localhost.
#   - When opened via a LAN IP (e.g. http://10.116.235.85:8080) and VITE_API_URL
#     still points to localhost, automatically call http://<YOUR_LAN_IP>:3000/api.
#   - In production, set VITE_API_URL to your real API domain, e.g. https://api.yourdomain.com
VITE_API_URL=http://localhost:3000/api

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Storage
VITE_FILE_STORAGE_PATH=/var/lib/buildflow/storage

# Application Configuration
VITE_APP_NAME=BuildFlow Agency Management
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PROJECT_MANAGEMENT=true
VITE_ENABLE_FINANCIAL_MANAGEMENT=true
VITE_ENABLE_HR_MANAGEMENT=true
VITE_ENABLE_CRM=true

# Third-party Services (Optional)
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_GOOGLE_MAPS_API_KEY=
VITE_ANALYTICS_TRACKING_ID=

# Email Service Configuration
# Select which email provider to use: smtp, sendgrid, mailgun, aws_ses, resend, postmark, mailtrap
# If not specified, the service will auto-detect based on available credentials
EMAIL_PROVIDER=

# SMTP Configuration (Gmail, Outlook, Mailtrap, custom SMTP)
# For Mailtrap: Get credentials from https://mailtrap.io/integrations
#   1. Go to Sending Domains > Select domain > Integration tab
#   2. Choose Transactional Stream (recommended) or Bulk Stream
#   3. Click Integrate > Switch to SMTP tab
#   4. Copy Host, Port, Username, and Password below
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-username
SMTP_PASSWORD=your-mailtrap-password
SMTP_FROM=noreply@yourdomain.com

# SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM=noreply@buildflow.com

# Mailgun Configuration
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Resend Configuration
RESEND_API_KEY=
RESEND_FROM=onboarding@resend.dev

# Postmark Configuration
POSTMARK_API_TOKEN=
POSTMARK_FROM=noreply@buildflow.com

# Mailtrap Configuration (Official API SDK)
# Get your API token from: https://mailtrap.io/api-tokens
MAILTRAP_API_TOKEN=f912575e971d78797dd594089af35412
MAILTRAP_FROM=burhan@easyio.tech
# Optional: Set to true for sandbox mode (testing - emails won't be sent)
MAILTRAP_USE_SANDBOX=false
# Optional: Inbox ID for sandbox mode (only needed if MAILTRAP_USE_SANDBOX=true)
MAILTRAP_INBOX_ID=
# Optional: Set to true to use Bulk Stream instead of Transactional Stream
MAILTRAP_BULK=false

# Test Email (for testing email configuration)
TEST_EMAIL=burhanali0116@gmail.com

# CORS configuration (backend)
# Comma-separated list of allowed frontend origins.
# Examples:
#   CORS_ORIGINS=http://localhost:8080
#   CORS_ORIGINS=http://localhost:8080,http://10.116.235.85:8080,https://app.yourdomain.com
# In local development you may leave this empty to allow all origins.
CORS_ORIGINS=
